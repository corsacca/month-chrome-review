{
  "manifest_version": 3,
  "name": "Monthly Chrome Review",
  "version": "1.0",
  "description": "Analyze your browsing history with daily summaries and domain statistics",
  "permissions": [
    "history",
    "storage"
  ],
  "action": {
    "default_title": "Monthly Chrome Review"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
} 